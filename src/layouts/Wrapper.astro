---
import Navigation from "src/components/Navigation.astro";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div
      class="w-screen h-screen -z-10 fixed"
      style={{
        backgroundColor: "#ffffff",
        opacity: "0.8",
        backgroundImage:
          "radial-gradient(#555075 0.5px, transparent 0.5px), radial-gradient(#555075 0.5px, #ffffff 0.5px)",
        backgroundSize: "20px 20px",
      }}
    >
    </div>
    <div class="mx-auto max-w-2xl px-5 z-10">
      <Navigation />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
