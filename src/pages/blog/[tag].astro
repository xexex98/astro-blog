---
import Wrapper from "src/layouts/Wrapper.astro";
import FilteredWithTagPosts from "src/components/FilteredWithTagPosts.astro";
import { getCollection } from "astro:content";
import { fade } from "astro:transitions";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag),
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}
const { posts } = Astro.props;
const { tag } = Astro.params;
---

<Wrapper title={tag}>
  <h3 class="mb-2">
    Posts tagged with <span
      class="text-xl font-bold from-purple-600 to-red-600 bg-gradient-to-r bg-clip-text text-transparent"
      >{tag}</span
    >
  </h3>
  <FilteredWithTagPosts posts={posts} />
</Wrapper>
