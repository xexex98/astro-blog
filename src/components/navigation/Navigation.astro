---
import ButtonLink from "src/components/ButtonLink.astro";
import Burger from "src/components/navigation/Burger.astro";
import Links from "src/components/navigation/Links.astro";
import Pages from "src/components/navigation/Pages.astro";
import Theme from "src/components/navigation/Theme.astro";

const pages = {
  Home: "/",
  Posts: "/posts",
};

const socials = {
  tg: "",
  gmail: "",
  github: "",
};

const groupedLinks = { ...pages, ...socials };
---

<header>
  <nav class="py-4 text-xl font-bold">
    <Burger links={groupedLinks} />
    <div class="hidden items-center justify-between sm:flex">
      <Links socials={socials} />
      <Pages pages={pages} />
      <Theme theme="light" />
    </div>
    <li>
      <svg xmlns="http://www.w3.org/2000/svg" class="scale-125 sm:scale-100"
        ><path
          d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
        ></path>
